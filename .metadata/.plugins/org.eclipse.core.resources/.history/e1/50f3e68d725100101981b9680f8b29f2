#include "circled_que.h"

int isQueFull();
int isQueEmpty();

#define QUE_IS_EMPTY -1

#define QUE_SIZE 4

typedef struct {
	int top;
	int tail;
	int queData[QUE_SIZE];
}CircleQue_tpye;

int queInit(CircleQue_tpye* que){
	que->top = 0;
	que->tail = 0;
}

int isQueFull(CircleQue_tpye* que) {
	return top == (tail + 1) % QUE_SIZE;
}

int isQueEmpty(CircleQue_tpye* que) {
	return top == tail;
}

void enQue(CircleQue_tpye* que, int data) {
	if(isQueFull()) return;
	queData[tail] = data;
	tail = (tail + 1) % QUE_SIZE;
}

int deQue() {
	if(isQueEmpty()) return QUE_IS_EMPTY;
	int data = queData[top];
	top = (top + 1) % QUE_SIZE;
	return data;
}

int queFront() {
	if(isQueEmpty()) return QUE_IS_EMPTY;
	return queData[top];
}
