#include "ap_main.h"

Button_Handler_t hBtnRunStop;
Button_Handler_t hBtnClear;
Button_Handler_t hBtnMode;

void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef *htim){
	if(htim->Instance == TIM2){
		FND_DisplayData();
	}
}

int ap_main()
{
	FND_WtireData(1234, 0b0000);
	while(1) {
	}

	return 0;
}

void ap_init()
{
	HAL_TIM_Base_Start_IT(&htim2); // tim2 Interrupt Enalble
	Button_Init(&hBtnRunStop, GPIOB, GPIO_PIN_5);
	Button_Init(&hBtnClear, GPIOB, GPIO_PIN_3);
	Button_Init(&hBtnMode, GPIOA, GPIO_PIN_10);
}
