#include "circled_que.h"

int isQueFull();
int isQueEmpty();

#define QUE_IS_EMPTY -1

#define QUE_SIZE 4

int top = 0, tail = 0;
int que[QUE_SIZE] = {0};

int isQueFull() {
	return top == (tail + 1) % QUE_SIZE;
}

int isQueEmpty() {
	return top == tail;
}

void enQue(int data) {
	if(isQueFull()) return;
	que[tail] = data;
	tail = (tail+1) % QUE_SIZE;
}

int deQue() {
	if(isQueEmpty()) return QUE_IS_EMPTY;
	int data = que[top];
	top = (top + 1) % QUE_SIZE;
	return data;
}

int QueFront() {
	if(isQueEmpty()) return QUE_IS_EMPTY;
	return que[top];
}
