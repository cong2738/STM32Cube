#include "LCD.h"

#define LCD_E 2

uint8_t lcdData = 0;

void LCD_E_High() {
	lcdData |= (1 << LCD_E);
	LCD_sendI2C(lcdData);
}

void LCD_E_Low() {

}

void LCD_sendData(uint8_t data){
	LCD_E_High(); // LCD_i2c enable
	// High 4bit
	lcdData = (data & 0xf0) | (lcdData & 0x0f);
	LCD_sendI2C(lcdData);
	LCD_E_Low(); // LCD_i2c disable


	LCD_E_High(); // LCD_i2c enable
	// Low 4bit
	data = data << 4;
	lcdData = (data & 0xf0) | (lcdData & 0x0f);
	LCD_sendI2C(lcdData);
	LCD_E_Low(); // LCD_i2c disable
}

void LCD_sendI2C(uint4_t data) {

}
