#include "ap_main.h"

enum {
	START,
	STOP,
    STOPWATCH,
    WATCH };

button_handler_t hBtnSTOPWATCH;
button_handler_t hBtnWATCH;
button_handler_t hBtnOnSTOP;

typedef struct {
	uint32_t msec;
	uint32_t sec;
	uint32_t min;
}clock_data_type;


int ap_state = START;

void TIM2_IRQHandler(void) // 인터럽트 함수 Startup가보면 인터럽트벡터등 이름이 명시되어 있음
{
	incTick();
    FND_DisplayData();
    TIM_ClearUIF(TIM2);
}

int ap_main()
{
	int ap_state = START;
	int mode = 1;
	clock_data_type clock[2];
    uint32_t prevCounterTime = 0;
    while (1) {
    	if(getTick() - prevCounterTime >= 100) {
    		prevCounterTime = getTick();
    		clock[mode].msec++;
    	}
    	if(clock[mode].msec == 1000) {
    		clock[mode].sec++;
    		clock[mode].msec = 0;
    	}
    	if(clock[mode].sec == 60) {
    		clock[mode].min++;
    		clock[mode].sec = 0;
    	}
    	if(clock[mode].min == 10) {
    		clock[mode].min = 0;
    	}

        switch (ap_state) {
			case START:
				clock[0].msec = 0;
				clock[0].sec = 0;
				clock[0].min = 0;
				clock[1].msec = 0;
				clock[1].sec = 0;
				clock[1].min = 0;
				ap_state = STOP;
				break;
			case STOP:
				break;
			case STOPWATCH:
				mode = 1;
				break;
			case WATCH:
				modes = 0;
				break;
        }
		FND_WtireData(clock[mode].msec+clock[mode].sec*10+clock[min]*1000);
    }

    return 0;
}

void ap_init()
{
    SystemClock_init();

    LedBar_Init();

    Button_Init(&hBtnSTOPWATCH, GPIOB, 5);
    Button_Init(&hBtnWATCH, GPIOB, 3);
    Button_Init(&hBtnOnSTOP, GPIOA, 10);

    FND_Init();

    //TIM2 EN, TIM2INTRF
    TIM_Init(TIM2, 16 - 1, 1000 - 1);
    TIM_CntStart(TIM2);
    TIM_UIEnable(TIM2);
    NVIC_EnableIRQ(TIM2_IRQn); // TIM2 interruft EN
}
