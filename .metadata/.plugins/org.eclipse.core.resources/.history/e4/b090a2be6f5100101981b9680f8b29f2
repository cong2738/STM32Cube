#include "circled_que.h"

uint8_t IsFull();
uint8_t IsEmpty();

typedef struct {
	uint32_t head;
	uint32_t tail;
	uint32_t queue[32];
}Q_Type;

#define QUE_SIZE 4
int front = 0, rear = 0;
int que[QUE_SIZE] = {0};

int IsFull(Q_Type queue) {
	return queue.head == (queue.tail + 1) % 4;
}

int IsEmpty(Q_Type queue) {
	return queue.head == queue.tail;
}

void enQue(uint32_t data) {
	if(isQueFull()) return;
	data[rear] = data;
}

void deQue() {
	if(isQueEmpty()) return;
	int res = que[front];
	front++;
	reutrn res;
}
