#include "../TICK/sys_tick.h"

TIM_TypeDef* hTcikTIM;

void SysTick_Init(TIM_TypeDef* TIMx){
   TIM_WritePSC(TIMx, psc);
   TIM_WriteARR(TIMx, arr);
   TIM_WriteCNT(TIMx, 0);
}

uint32_t getTick(){
	return hTcikTIM->CNT;
}

void SysTick_Start(){
	hTcikTIM->CR1 |= (1<<0);
}

void SysTick_Stop(){
	hTcikTIM->CR1 &= ~(1<<0);
}
