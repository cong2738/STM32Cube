#include "TIM.h"

void TIM_Init(){

}

void TIM_Start(TIM_TypeDef* TIMx){
	TIMx->CR1 |= 1<<0;
}

void TIM_Stop(TIM_TypeDef* TIMx){
	TIMx->CR1 &= 1<<0;
}

void TIM_IEnable(TIM_TypeDef* TIMx){
	TIMx->DMAR |= (1<<0);
}

void TIM_IDisable(TIM_TypeDef* TIMx){
	TIMx->DMAR &= ~(1<<0);
}

uint23_t TIM_GetCnt(TIM_TypeDef* TIMx){
	return TIMx->CNT;
}
void TIM_WriteCnt(TIM_TypeDef* TIMx){
	TIMx->CNT = cnd;
}

uint23_t TIM_GetPSC(TIM_TypeDef* TIMx){
	return TIMx->PSC;
}
void TIM_WritePSC(TIM_TypeDef* TIMx){
	TIMx->PSC = cnd;
}

uint23_t TIM_GetARR(TIM_TypeDef* TIMx){
	return TIMx->ARR;
}
void TIM_WriteARR(TIM_TypeDef* TIMx){
	TIMx->ARR = cnd;
}
